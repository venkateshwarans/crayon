{
  "name": "@crayonai/react-ui",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles/*": {
      "default": "./dist/styles/*"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm run build:tsc && pnpm run build:scss",
    "build:tsc": "tsc -p .",
    "build:scss": "sass src:dist --style compressed --no-source-map",
    "storybook": "storybook dev -p 6006",
    "watch": "concurrently \"pnpm run build:ts -- --watch\" \"pnpm run build:scss -- --watch\"",
    "lint:check": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format:fix": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "prepare": "pnpm run build",
    "ci": "pnpm run lint:check && pnpm run format:check"
  },
  "peerDependencies": {
    "@crayonai/react-core": "workspace:*",
